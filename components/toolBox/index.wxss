/* components/toolBox/index.wxss */
.radius8{
  background: #fff;
  border-radius: 8rpx;
}
.usertool .toolslink{
  font-weight: bold;
  font-size: 34rpx;
  color: #333;
  padding: 20rpx;
}
.usertool .linkurl{
  position: relative;
}
.usertool .linkurl:after{
  content: "";
  display: inline-block;
  height: 6px;
  width: 6px;
  border-width: 1.5px 1.5px 0 0;
  border-color: #999;
  border-style: solid;
  -webkit-transform: matrix(.71,.71,-.71,.71,0,0);
  transform: matrix(.71,.71,-.71,.71,0,0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 30rpx;
}
.usertool .tools{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  text-align: center;
}
.usertool .toolswrap:after{
  content: ""; 
  flex: auto;
}
.usertool .toolswrap{
  flex-flow: row wrap;
}
.usertool .toolswrap .jump_box {
  flex: none !important;
  width: 25%;
}
.usertool .tools .jump_box{
  font-size: 24rpx;
  color: #333;
  flex: 1;
  position: relative;
  margin-top: 30rpx;
  margin-bottom: 50rpx;
}
.usertool .icon-tool{
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 8rpx;
}
.user_toolsnum{
  position: absolute;
  top:-10rpx;
  left:58%;
  background: #3c91fa;
  font-size:24rpx;
  border-radius: 50%;
  color:#ffffff;
  margin:0;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
}
.doubelnum{
  border-radius: 45%;
  width: auto;
  padding: 0 8rpx;
}
.user_toolsred{
  position: absolute;
  top:37rpx;
  left:58%;
  background: #d91616;
  border-radius: 50%;
  margin:0;
  width: 17rpx;
  height: 17rpx;
}